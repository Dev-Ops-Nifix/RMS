		{
			"name": "Teacher Performance Input",
			"item": [
				{
					"name": "Add Single Performance",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Performance created\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('performance');",
									"    pm.expect(jsonData).to.have.property('grade');",
									"    pm.expect(jsonData.performance.percentage).to.equal(90);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"subject\": \"Mathematics\",\n  \"testType\": \"quiz\",\n  \"marks\": 18,\n  \"totalMarks\": 20,\n  \"date\": \"2024-01-15\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/teacher/performance",
							"host": ["{{baseUrl}}"],
							"path": ["api", "teacher", "performance"]
						}
					}
				},
				{
					"name": "Batch Add Performance",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Batch created successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('results');",
									"    pm.expect(jsonData.results.length).to.be.above(0);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"performances\": [\n    {\n      \"studentId\": \"{{studentId}}\",\n      \"subject\": \"Science\",\n      \"testType\": \"test\",\n      \"marks\": 85,\n      \"totalMarks\": 100,\n      \"date\": \"2024-01-15\"\n    },\n    {\n      \"studentId\": \"{{studentId}}\",\n      \"subject\": \"English\",\n      \"testType\": \"assignment\",\n      \"marks\": 42,\n      \"totalMarks\": 50,\n      \"date\": \"2024-01-15\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/teacher/performance/batch",
							"host": ["{{baseUrl}}"],
							"path": ["api", "teacher", "performance", "batch"]
						}
					}
				}
			]
		},
